#include <iostream>

using namespace std;

float notas[5];
float soma;
float media;
float maiorNota = 0;
float menorNota = 20; 

int main() {
    
    cout << "Escreve as notas dos 5 alunos: " << endl;
    
    for(int i = 0; i < 5; i++) {
        cout << "Nota do aluno " << i + 1 << ": ";
        cin >> notas[i];
        soma += notas[i];
        media = soma / 5;
        
        
    if(notas[i] > 20){
        cout << "So notas ate 20" << endl;
    }
    
    
    if (notas[i] > maiorNota) {
            maiorNota = notas[i];
        }
    if (notas[i] < menorNota) {
            menorNota = notas[i];
        }   
        
    
    }
    
    cout << "MÃ©dia: " << media << endl;
    cout << "Menor nota: " << menorNota << endl;
    cout << "Maior nota: " << maiorNota << endl;
    
    return 0;
}
